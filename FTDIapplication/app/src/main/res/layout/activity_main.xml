<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/yesData"
        android:layout_width="204dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/recievingdata" />

    <ImageView
        android:id="@+id/noData"
        android:layout_width="201dp"
        android:layout_height="81dp"
        app:layout_constraintBottom_toBottomOf="@+id/yesData"
        app:layout_constraintEnd_toEndOf="@+id/yesData"
        app:layout_constraintStart_toStartOf="@+id/yesData"
        app:layout_constraintTop_toTopOf="@+id/yesData"
        app:srcCompat="@drawable/nodata" />

    <EditText
        android:id="@+id/inclination"
        android:layout_width="110dp"
        android:layout_height="61dp"
        android:layout_marginStart="27dp"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="48dp"
        android:clickable="false"
        android:editable="false"
        android:ems="10"
        android:enabled="true"
        android:inputType="none"
        android:selectAllOnFocus="false"
        android:singleLine="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/noData" />

    <EditText
        android:id="@+id/azimuthDegrees"
        android:layout_width="105dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="48dp"
        android:clickable="false"
        android:editable="false"
        android:ems="10"
        android:enabled="true"
        android:inputType="none"
        android:selectAllOnFocus="false"
        android:singleLine="true"
        app:layout_constraintEnd_toStartOf="@+id/heightside"
        app:layout_constraintStart_toEndOf="@+id/inclination"
        app:layout_constraintTop_toBottomOf="@+id/noData" />

    <EditText
        android:id="@+id/heightside"
        android:layout_width="104dp"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="143dp"
        android:layout_marginEnd="34dp"
        android:layout_marginRight="34dp"
        android:clickable="false"
        android:editable="false"
        android:ems="10"
        android:enabled="true"
        android:inputType="none"
        android:selectAllOnFocus="false"
        android:singleLine="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/azimuthDegrees"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/compass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/azimuthDegrees"
        app:layout_constraintVertical_bias="0.912"
        app:srcCompat="@drawable/compass" />

    <ImageView
        android:id="@+id/pointer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="180dp"
        android:layout_marginLeft="180dp"
        android:layout_marginBottom="156dp"
        app:layout_constraintBottom_toBottomOf="@+id/compass"
        app:layout_constraintStart_toStartOf="@+id/compass"
        app:srcCompat="@drawable/pointer" />

</androidx.constraintlayout.widget.ConstraintLayout>